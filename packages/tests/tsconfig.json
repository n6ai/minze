{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@tests/minze/*": ["e2e/minze/src/*"],
      "@tests/minze-element/*": ["e2e/minze-element/src/*"],
      "@tests/react/*": ["integration/react/src/*"],
      "@tests/svelte/*": ["integration/svelte/src/*"],
      "@tests/vue/*": ["integration/vue/src/*"]
    }
  },
  "include": ["**/src/**/*", "**/types/**/*"]
}
