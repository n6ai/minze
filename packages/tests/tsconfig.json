  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@tests/minze-element/*": ["e2e/minze-element/src/*"]
    }
  },
  "include": ["**/src/**/*", "**/types/**/*"]
}
