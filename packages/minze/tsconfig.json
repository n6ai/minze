{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "minze": ["./src/main.ts"],
      "src/*": ["./src/*"],
      "@/*": ["./test/*"]
    }
  },
  "include": ["./src", "./test"]
}
