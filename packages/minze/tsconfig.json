{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "minze": ["./src/main.ts"],
      "@minze/*": ["./src/*"],
      "@/*": ["./play/*"]
    }
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts", "./play/**/*.ts"]
}
