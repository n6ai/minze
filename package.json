{
  "name": "minze-monorepo",
  "private": true,
  "engines": {
    "node": ">=v16.0.0"
  },
  "workspaces": [
    "packages/minze",
    "packages/vite-plugin-minze",
    "packages/*",
    "packages/tests/**/*"
  ],
  "scripts": {
    "predev": "npm run build -w @minzejs/vite-plugin-minze",
    "dev": "run-p -rs dev-minze dev-playground",
    "dev-minze": "npm run dev -w minze",
    "dev-playground": "(wait-on -w 1500 packages/minze/dist/module.js) && (npm run dev -w playground)",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test-jest": "npm run test-jest --workspaces --if-present",
    "test-pw": "npm run test-pw --workspaces --if-present",
    "test-pw-debug": "npm run test-pw-debug --workspaces --if-present",
    "docs": "vitepress dev docs",
    "docs-build": "(vitepress build docs) && (npx -y tsx scripts/sitemap.ts)",
    "docs-serve": "vitepress serve docs",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache **/*.{ts,js}",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "simple-git-hooks": "^2.8.1",
    "vitepress": "^1.0.0-beta.3",
    "wait-on": "^7.0.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx @n6ai/verify-commit-msg@latest $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/**/*.{ts,js}": [
      "eslint --cache --fix"
    ]
  }
}
