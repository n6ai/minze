{
  "name": "minze-monorepo",
  "private": true,
  "engines": {
    "node": ">=v14.0.0"
  },
  "workspaces": [
    "packages/*",
    "packages/tests/**/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "run-p -rs dev-*",
    "dev-minze": "npm run dev -w minze",
    "dev-playground": "(wait-on -d 200 packages/minze/dist/module.js) && (npm run dev -w playground)",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test-jest": "npm run test-jest --workspaces --if-present",
    "test-pw": "npm run test-pw --workspaces --if-present",
    "test-pw-debug": "npm run test-pw-debug --workspaces --if-present",
    "docs": "vitepress dev docs",
    "docs-build": "vitepress build docs",
    "docs-serve": "vitepress serve docs",
    "format": "prettier --write .",
    "lint": "eslint **/*.{ts,js}",
    "clean": "npm run clean --workspaces --if-present",
    "size": "npm run size --workspaces --if-present",
    "release": "echo \"[use]: npm run release -w <minze | create-minze>\""
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "standard-version": "^9.3.2",
    "vitepress": "^0.21.5",
    "wait-on": "^6.0.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/**/*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
