{
  "name": "minze-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=v16.0.0"
  },
  "workspaces": [
    "packages/minze",
    "packages/vite-plugin-minze",
    "packages/*",
    "packages/tests/**/*"
  ],
  "scripts": {
    "predev": "npm run build -w @minzejs/vite-plugin-minze",
    "dev": "conc -k -n \"m,p\" -c \"green,magenta\" \"npm run dev -w minze\" \"(wait-on -w 2000 packages/minze/dist/main.js) && (npm run dev -w playground)\"",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "docs": "vitepress dev docs",
    "docs-build": "(vitepress build docs) && (npx -y tsx scripts/sitemap.ts)",
    "docs-serve": "vitepress serve docs",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache **/*.{ts,js}",
    "deps": "(npx -y taze -r -w) && (npm i)",
    "postinstall": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "lint-staged": "^13.2.3",
    "prettier": "2.8.8",
    "simple-git-hooks": "^2.8.1",
    "vitepress": "^1.0.0-beta.5",
    "wait-on": "^7.0.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx @n6ai/verify-commit-msg@latest $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/**/*.{ts,js}": [
      "eslint --cache --fix"
    ]
  }
}
