{
  "name": "minze-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=v14.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint **/*.{ts,js}",
    "format": "prettier --write .",
    "dev": "run-p -rs dev-*",
    "dev-minze": "npm run dev -w minze",
    "dev-vite-ts": "(wait-on packages/minze/dist/module.js) && (npm run dev -w vite-ts)",
    "build": "run-s build-*",
    "build-minze": "npm run build -w minze",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.19.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "chalk": "^5.0.0",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "wait-on": "^6.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged --concurrent false",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/**/*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
